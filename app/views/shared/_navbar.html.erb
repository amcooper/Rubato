<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <div class= "row ml-2">
     <i class="fas fa-forward logo"></i>
     <% unless current_page?('/')%>
      <h1 class="logo-title ml-2 pt-2"> rubato <h1>
     <% end %>
    </div>
     <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% if current_user.avatar.attached? %>
          <div class= "row mr-3 pt-3 navbar-links">
            <%= link_to "Lessons", my_dashboard_path, class: "btn" %>
            <%= link_to "Students", students_path, class: "btn" %>
            <%= link_to "Songs Library", songs_path, class: "btn" %>
          </div>
         <div clas= "col">
          <%= cl_image_tag current_user.avatar.key, class: 'avatar align-self-center dropdown-toggle', id: 'navbarDropdown', data: { toggle: 'dropdown' }, 'aria-haspopup': true, 'aria-expanded': false %>
          <p class= 'username'><%= current_user.first_name%> <%= current_user.last_name%></p>
      <% else %>
        <%= image_tag 'img_avatar.png', crop: :thumb , class: 'avatar dropdown-toggle', id: 'navbarDropdown', data: { toggle: 'dropdown' }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% end %>
       <li class="nav-item dropdown">
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%#= link_to "Dashboard", my_dashboard_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
        </div>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
          </li>
    </ul>
  </div>
</div>
