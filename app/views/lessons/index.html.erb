<div class="container" >
  <div class="d-flex justify-content-between mt-3 py-4">
    <h1>Lessons</h1>
    <%= render partial: "shared/student_searchbar" %>
   </div>



  <div class="row">
    <div class="col">
      <h4 class="header">
        Upcoming lessons
      </h4>
    </div>
    <div class="col">
      <h4 class="header">
        Past lessons
      </h4>
    </div>
  </div>

  <!-- <div class="row"> -->
    <div class="col pl-0">
      <%= link_to new_lesson_path, class: 'card-hover' do %>
        <div class="lesson-card card-hover">
          <i class="add-new-card fas fa-plus-circle"> </i>
        </div>
      <% end %>
    </div>
    <div class="col pl-0">

      <% @students.each do |student| %>
        <% if student.lessons.present? %>

        <%= link_to student_path(student), class: 'card-hover' do %>
          <div class="lesson-card">
            <div class="d-flex justify-content-between">
              <div class="mt-1">
                <% if student.avatar.attached? %>
                  <%= cl_image_tag student.avatar.key, class: "avatar" %>
                <% else %>
                  avatar
                <% end %>
              </div>

              <div class="pl-4">
                <% student.lessons.each do |lesson|  %>
                  <p class="mt-1 mb-1"><%= lesson.date  %> </p>
                  <p class="mt-3 mb-0"><%= lesson.start_time %> </p> -->
                <% end %>
              </div>

              <div class="pl-4">
                <h5 class="mt-1 mb-1"> <%= student.first_name  %> </h5>
                <p class="mt-3 mb-0 sm-card-frame"><%= student.skill_level %>
                 </p>
              </div>

            </div>

            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>


    </div>
    <div class="col">col</div>
