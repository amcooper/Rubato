<div class="student-form">
  <div class="container">
    <h1>Add your new student</h1>
    <%= simple_form_for @student do |f| %>
      <div>
        <%= f.input :first_name %>
      </div>

      <div>
        <%= f.input :last_name %>
      </div>

      <div>
        <%= f.input :skill_level, :collection => %w[ Beginner Intermediate Advanced ] %>
      </div>

      <div>
        <%= f.input :avatar, as: :file %>
      </div>

      <%= f.submit 'Add Student', class:"btn-camel" %>
    <% end %>
  </div>
</div>
