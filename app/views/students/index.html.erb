<div class="container" style="background: red">
  <div class="d-flex justify-content-between mt-3 py-4">
    <h1>Students</h1>
    <%= render partial: "shared/searchbar" %>
   </div>



<div class="cards" style="background: blue">
  <%= link_to new_student_path, class: 'card-link' do %>
  <div class="student-card align-text-center">
    <i class="add-button fas fa-plus-circle"> </i>
  </div>
  <% end %>

  <% @students.each do |student| %>
    <div class="student-card">
      <% if student.avatar.attached? %>
        <p><%= cl_image_tag student.avatar.key, class: "avatar" %> </p>
      <% else %>
        <p>avatar</p>
      <% end %>
      <i class="fas fa-edit edit-icon"></i>
      <div>
        <p><%= student.first_name  %> </p>
        <p><%= student.skill_level %> </p>
      </div>
    </div>
  <% end %>
</div>

</div>





