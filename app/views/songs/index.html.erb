<div class="container" >
  <div class="d-flex justify-content-between mt-3 py-4">
    <h1>Songs Library</h1>
    <%= render partial: "shared/song_searchbar" %>
   </div>

<div class="cards" >
  <%= link_to new_song_path, class: 'card-hover' do %>
    <div class="student-card card-hover add-new-card">
      <i class="pink-color fas fa-plus-circle"> </i>
    </div>
  <% end %>

  <% @songs.each do |song| %>
    <%= link_to song_path(song), class: 'card-hover' do %>
      <div class="student-card">

          <div class="pl-4">
            <h5 class="mt-1 mb-1"><%= song.name  %> </h5>
            <p class="mt-3 mb-0"><%= song.description %> </p>
          </div>
        <!-- <div class="d-flex"> -->
          <i class=“far fa-eye”></i><i class=“fas fa-user-plus”></i><i class="fas fa-pen"></i><i class=“far fa-copy”></i><i class=“far fa-trash-alt”></i>
        <!-- </div> -->

      </div>
      <% end %>
  <% end %>
</div>

</div>
