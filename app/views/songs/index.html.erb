<div class="container" >
  <div class="d-flex justify-content-between mt-3 py-4">
    <h1>Songs</h1>
    <%= render partial: "shared/song_searchbar" %>
   </div>

<div class="row row-cols-1 row-cols-md-2">
  <div class="col mb-4">
<div class="cards" >
  <%= link_to new_song_path do %>
    <div class="song-card">
      <i class="add-new-card fas fa-plus-circle"> </i>
    </div>
  <% end %>
  <% @songs.each do |song| %>
      <%= link_to song_path(song) do %>
      <div class="song-card">
        <div class="card-body">
          <h5 class="card-title mt-3"><%= song.name %></h5>
          <p class="card-text"><%= song.skill_level %></p>
          <div class="row col-auto p-1 my-1 mr-0 mml-1">
            <div class="col">
              <i class="small-icon fas fa-edit"></i> 
            </div>
            <div class="col">
              <i class=" small-icon fas fa-user-plus"></i>  
            </div>
            <div class="col">
              <i class="small-icon fas fa-eye"></i>
            </div>
            <div class="col">
              <i class="small-icon far fa-trash-alt"></i>
            </div>
  </div>
</div>

      </div>
      <% end %>
  <% end %>
</div>
</div>
</div>
</div>