function clickStretcher (ev) {
  offX = parseInt (ev.clientX);
  textDefaultWidth = parseFloat(txt.style.width);
  currentDrag = ev.target;
  letterSpacingStart = parseFloat(txt.style.letterSpacing);
  wordSpacingStart = parseFloat(txt.style.wordSpacing);
