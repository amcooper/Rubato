  letterSpacingStart = txt.style.letterSpacing;
  wordSpacingStart = txt.style.wordSpacing;
    console.log ("unclick " + letterSpacingStart);
}


function resize() {
  hide.textContent = txt.value;
  txt.style.width = hide.offsetWidth + "px";
  textDefaultWidth  = parseFloat (txt.style.width);
  textStartWidth = parseFloat (txt.style.width);
