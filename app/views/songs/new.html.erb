//////////////////////////////////////////////////////////////
//             expandable text field
//////////////////////////////////////////////////////////////

let textStartWidth = 150.0;
let textDefaultWidth = 150.0;
let letterSpacingStart = 1.0;
let wordSpacingStart = 1.0;

// const
const hide = document.getElementById('hide');
const txt = document.getElementById('txt');
