<%#= @song.html %>
  <div class="container edit-page-identifier mt-0" style='margin-left: 16px;'>
    <div class="row" style='height: 800px; padding:0px;'>


      <%= render partial: "chord_library" %>
        <!-- <div class='col' id="save-area"> -->
      <%= @song.html.html_safe %>
    </div>
    <div id="song-id" data-song-id="<%= @song.id %>"></div>
</div>
<template id="btns">
    <div class='m-0 p-0'>
      <span id="save-as-btn"class="btn-sm btn-camel save-changes-btn m-0">Save as</span>
      <%= link_to :back do %>
      <span  class="btn-sm btn-camel" id="cancel-btn">Cancel</span>
      <% end %>
    </div>
</template>

<template id="template">
  <div>
    <div class='target-area'>
    </div>
    <div class="lyric-area">
      <div class="hide" type="text"></div>
      <input class="lyrics" type="text" placeholder="Enter Lyrics" style="letter-spacing: 0.0px; word-spacing: 0.0px;">
      <span class="stretcher btn btn-camel"><i class="fas fa-arrows-alt-h lyrics-handle-icon"></i></span>
    </div>
  </div>
</template>
