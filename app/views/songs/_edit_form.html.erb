<%= simple_form_for @song, html: {class: "d-flex justify-content-between align-items-end", id: "edit-song-form"} do |f| %>
  <!-- <input id="song-title" type="text" placeholder="Song Title" class="mt-3 mb-0 flex-grow-1"> -->
   <input name="_method" type="hidden" value="patch" />
   <!-- <input type="button" value="Show html" id="show-html-btn"> -->
  <%=f.input :name, value:'song2', id:'song-name', label:false, class: "mt-3 mb-0 flex-grow-1" %>
  <%=f.hidden_field :html, value: @song.html, id:'song-html' %>
  <%= f.input :skill_level, collection: ['Beginner', 'Intermediate', 'Advanced'], default: 'Beginner', label: false, input_html: {class: 'level-select'}, label_html: {class: 'level-label'} %>
  <div id="add-line-btn" class='btn-sm btn-camel mt-4'>Add Line</div>
    <%= f.submit "Save Changes", class: "btn-sm btn-camel mt-4", id: "edit-song-btn" %>
<% end %>
