<%= simple_form_for @song, html: {id: "edit-song-form" }, novalidate: "novalidate"  do |f| %>
  <!-- <input id="song-title" type="text" placeholder="Song Title" class="mt-3 mb-0 flex-grow-1"> -->
   <input name="_method" type="hidden" value="patch" />
   <div>
  <%=f.input :name, value:'song2', id:'song-name', label:false, novalidate: "novalidate"  %>

   </div>
  <%=f.hidden_field :html, value: @song.html, id:'song-html' %>
  <div class="d-flex justify-content-between align-items-end">
  <%= f.input :skill_level, collection: ['Beginner', 'Intermediate', 'Advanced'], default: 'Beginner', label: false, input_html: {class: 'level-select'}, label_html: {class: 'level-label'} %>
  <div id="add-line-btn" class='btn-sm btn-camel'>Add Line</div>
  <div id="save-as-btn" class='btn-sm btn-camel'>Save as</div>
    <%= f.submit "Save Changes", class: "btn-sm btn-camel", id: "edit-song-btn" %>
    <%= link_to "Cancel" , :back,  class: "btn-sm btn-camel"  %>
  </div>
<% end %>
